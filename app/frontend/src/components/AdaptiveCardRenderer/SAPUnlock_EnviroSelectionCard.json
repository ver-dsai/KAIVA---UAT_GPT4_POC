{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "TextBlock",
            "text": "Please select the environment:",
            "wrap": true,
            "weight": "Bolder",
            "size": "Medium"
        },
        {
            "type": "Input.ChoiceSet",
            "id": "environment",
            "style": "expanded",
            "choices": [
                { "title": "QA", "value": "QA" },
                { "title": "Production (PRD)", "value": "Production (PRD)" }
            ],
            "placeholder": "Select an environment"
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Next",
            "style": "positive",
            "data": {
                "action": "selectEnvironment"
            }
        }
    ]
}
